<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FrostLive.Controls" 
             x:Class="FrostLive.Controls.PlayerControl"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="400"
             Background="Transparent"
             Name="PlayerControlRoot">

    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Now Playing -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Play Icon -->
                <TextBlock x:Name="PlayIcon" Grid.Column="0" 
                          Text="▶" 
                          Foreground="{StaticResource NeonGreenBrush}" 
                          FontSize="11"
                          Margin="0,0,8,0"
                          VerticalAlignment="Center"/>

                <!-- Song Title - Бегущая строка -->
                <Border Grid.Column="1" 
       VerticalAlignment="Center"
       Margin="0,0,5,0"
       ClipToBounds="True"
       Height="16"
       x:Name="MarqueeContainer"
       MouseEnter="MarqueeContainer_MouseEnter"
       MouseLeave="MarqueeContainer_MouseLeave">

                    <!-- Используем Grid для дублирования текста -->
                    <Grid x:Name="MarqueeGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Основной текст -->
                        <TextBlock x:Name="SongTitleText" Grid.Column="0"
                  Text="{Binding CurrentSong, ElementName=PlayerControlRoot}" 
                  Foreground="{StaticResource NeonGreenBrush}"
                  FontFamily="Courier New"
                  FontSize="11"
                  FontWeight="Bold"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left">
                            <TextBlock.RenderTransform>
                                <TranslateTransform x:Name="TitleTransform"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- Дублирующий текст (скрыт по умолчанию) -->
                        <TextBlock x:Name="DuplicateText" Grid.Column="1"
                  Text="{Binding CurrentSong, ElementName=PlayerControlRoot}" 
                  Foreground="{StaticResource NeonGreenBrush}"
                  FontFamily="Courier New"
                  FontSize="11"
                  FontWeight="Bold"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Margin="20,0,0,0"
                  Visibility="Collapsed">
                            <TextBlock.RenderTransform>
                                <TranslateTransform x:Name="DuplicateTransform"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Status -->
                <Border Grid.Column="2" 
                       Background="{StaticResource DarkTransparent}"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="5,3"
                       Margin="15,0,0,0">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="BorderBrush" Value="{StaticResource NeonBlueBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PlayerStatus, ElementName=PlayerControlRoot}" Value="PLAYING">
                                    <Setter Property="BorderBrush" Value="{StaticResource NeonGreenBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PlayerStatus, ElementName=PlayerControlRoot}" Value="PAUSED">
                                    <Setter Property="BorderBrush" Value="{StaticResource NeonYellowBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PlayerStatus, ElementName=PlayerControlRoot}" Value="ERROR">
                                    <Setter Property="BorderBrush" Value="{StaticResource NeonRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PlayerStatus, ElementName=PlayerControlRoot}" Value="READY">
                                    <Setter Property="BorderBrush" Value="{StaticResource NeonBlueBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBlock Text="{Binding PlayerStatus, ElementName=PlayerControlRoot}" 
                              Foreground="{StaticResource NeonBlueBrush}"
                              FontFamily="Courier New"
                              FontSize="9"
                              FontWeight="Bold"/>
                </Border>
            </Grid>

            <!-- Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Первая строка: кнопки и время -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Play/Pause Button -->
                    <Button Name="Play" Grid.Column="0" 
               Command="{Binding PlayPauseCommand, ElementName=PlayerControlRoot}"
               Style="{StaticResource NeonButtonStyle}"
               BorderBrush="{StaticResource NeonGreenBrush}"
               Foreground="{StaticResource NeonGreenBrush}"
               MinWidth="140"
               Padding="15,8">
                        <TextBlock Text="{Binding PlayPauseButtonText, ElementName=PlayerControlRoot}" 
                      FontFamily="Courier New"
                      FontSize="9"/>
                    </Button>

                    <!-- Volume Control -->
                    <local:VolumeControl Grid.Column="1"
               Margin="10,0,0,0"
               Volume="{Binding Volume, Mode=TwoWay, ElementName=PlayerControlRoot}"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

                    <!-- Time Display -->
                    <Border Grid.Column="2" 
               Background="{StaticResource SemiTransparentCyan}"
               BorderBrush="#6600FFFF"
               BorderThickness="1"
               CornerRadius="4"
               Padding="6,4"
               MinWidth="55">
                        <TextBlock Text="{Binding CurrentTime, ElementName=PlayerControlRoot}" 
                      Foreground="{StaticResource NeonBlueBrush}"
                      FontFamily="Courier New"
                      FontSize="11"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Вторая строка: Peak Meter (занимает всю ширину) -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <local:PeakMeter x:Name="AudioPeakMeter"
                        Height="20"
                        HorizontalAlignment="Stretch"
                        LeftValue="{Binding LeftPeakValue, ElementName=PlayerControlRoot}"
                        RightValue="{Binding RightPeakValue, ElementName=PlayerControlRoot}"
                        ShowPeakValues="True"/>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</UserControl>