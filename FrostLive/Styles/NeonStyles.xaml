<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FrostLive.Controls">

    <!-- Базовые кисти -->
    <SolidColorBrush x:Key="NeonBlueBrush" Color="#FF00FFFF"/>
    <SolidColorBrush x:Key="NeonGreenBrush" Color="#FF00FF00"/>
    <SolidColorBrush x:Key="NeonYellowBrush" Color="#FFFFFF00"/>
    <SolidColorBrush x:Key="NeonRedBrush" Color="#FFFF0000"/>
    <SolidColorBrush x:Key="BgDarkBrush" Color="#FF0a0a0f"/>
    <SolidColorBrush x:Key="BgDarkerBrush" Color="#FF050508"/>
    <SolidColorBrush x:Key="SemiTransparentCyan" Color="#3300FFFF"/>
    <SolidColorBrush x:Key="DarkTransparent" Color="#B3000000"/>

    <!-- Цвета для баров в зависимости от уровня (используется в коде) -->
    <SolidColorBrush x:Key="RetroBarGreen" Color="#FF00FF00"/>
    <SolidColorBrush x:Key="RetroBarYellow" Color="#FFFFFF00"/>
    <SolidColorBrush x:Key="RetroBarRed" Color="#FFFF0000"/>
    <SolidColorBrush x:Key="RetroBarCyan" Color="#FF00FFFF"/>
    <SolidColorBrush x:Key="RetroBarPurple" Color="#FFFF00FF"/>
    <SolidColorBrush x:Key="RetroTextBrush" Color="#FF00FFBF"/>
    <SolidColorBrush x:Key="NeonCyanBrush" Color="#FF00FFFF"/>
    <SolidColorBrush x:Key="NeonPurpleBrush" Color="#FFFF00FF"/>

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgDarkerBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonBlueBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#FF00FFFF" Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Neon Button Style -->
    <Style x:Key="NeonButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource NeonBlueBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonBlueBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource NeonBlueBrush}"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#FF00FFFF" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Track Item Style -->
    <Style x:Key="TrackItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{TemplateBinding Background}"
                            Padding="8,5"
                            Margin="0,0,0,5">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource SemiTransparentCyan}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Simple Custom Slider -->
    <Style x:Key="SimpleCustomSlider" TargetType="Slider">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Иконка -->
                        <TextBlock Grid.Column="0" 
                                  Text="🔊" 
                                  Foreground="{StaticResource NeonBlueBrush}" 
                                  FontSize="14"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>

                        <!-- Контейнер ползунка -->
                        <Border Grid.Column="1" 
                               Background="#2200FFFF"
                               BorderBrush="#4400FFFF"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="2"
                               VerticalAlignment="Center">
                            <Grid>
                                <!-- Стандартный трек, но со стилизованным Thumb -->
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="Slider.DecreaseLarge" 
                                                     Background="Transparent"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="Slider.IncreaseLarge" 
                                                     Background="Transparent"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb x:Name="CustomThumb" 
                                              Width="14" 
                                              Height="14" 
                                              Background="Transparent">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="{StaticResource NeonBlueBrush}" 
                                                            Stroke="#FF0a0a0f" 
                                                            StrokeThickness="2">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect BlurRadius="5" 
                                                                            ShadowDepth="0" 
                                                                            Color="#FF00FFFF"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CustomThumb" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10" 
                                                     ShadowDepth="0" 
                                                     Color="#FF00FFFF" 
                                                     Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Custom ScrollBar -->
    <Style x:Key="NeonScrollBar" TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid x:Name="Bg">
                        <Track x:Name="PART_Track" 
                           IsDirectionReversed="True">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineUpCommand" 
                                         Style="{x:Null}">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Rectangle Height="0" Fill="Transparent"/>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>

                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineDownCommand" 
                                         Style="{x:Null}">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Rectangle Height="0" Fill="Transparent"/>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>

                            <Track.Thumb>
                                <Thumb x:Name="Thumb" 
                                   Background="{StaticResource NeonBlueBrush}"
                                   Opacity="0.3">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border CornerRadius="6" 
                                                Background="{TemplateBinding Background}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="5" 
                                                                ShadowDepth="0" 
                                                                Color="#FF00FFFF"
                                                                Opacity="0.2"/>
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- При наведении на сам скроллбар -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.6"/>
                        </Trigger>

                        <!-- При наведении на thumb (бегунок) -->
                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.8"/>
                            <Setter TargetName="Thumb" Property="Background" Value="{StaticResource NeonBlueBrush}"/>
                        </Trigger>

                        <!-- При нажатии на thumb -->
                        <Trigger SourceName="Thumb" Property="IsDragging" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="1"/>
                            <Setter TargetName="Thumb" Property="Background" Value="{StaticResource NeonBlueBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для горизонтального скроллбара -->
    <Style x:Key="NeonScrollBarHorizontal" TargetType="ScrollBar" BasedOn="{StaticResource NeonScrollBar}">
        <Setter Property="Height" Value="12"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid x:Name="Bg">
                        <Track x:Name="PART_Track" 
                           IsDirectionReversed="False">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineLeftCommand" 
                                         Style="{x:Null}">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Rectangle Width="0" Fill="Transparent"/>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>

                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineRightCommand" 
                                         Style="{x:Null}">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Rectangle Width="0" Fill="Transparent"/>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>

                            <Track.Thumb>
                                <Thumb x:Name="Thumb" 
                                   Background="{StaticResource NeonBlueBrush}"
                                   Opacity="0.3">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border CornerRadius="6" 
                                                Background="{TemplateBinding Background}">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="5" 
                                                                ShadowDepth="0" 
                                                                Color="#FF00FFFF"
                                                                Opacity="0.2"/>
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- При наведении на сам скроллбар -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.6"/>
                        </Trigger>

                        <!-- При наведении на thumb (бегунок) -->
                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.8"/>
                            <Setter TargetName="Thumb" Property="Background" Value="{StaticResource NeonBlueBrush}"/>
                        </Trigger>

                        <!-- При нажатии на thumb -->
                        <Trigger SourceName="Thumb" Property="IsDragging" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="1"/>
                            <Setter TargetName="Thumb" Property="Background" Value="{StaticResource NeonBlueBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для ScrollViewer с кастомными скроллбарами -->
    <!-- Стиль для ScrollViewer с кастомными скроллбарами -->
    <Style x:Key="NeonScrollViewer" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollViewer">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Контент -->
                        <ScrollContentPresenter Grid.Column="0" Grid.Row="0"
                                      Margin="{TemplateBinding Padding}"
                                      CanContentScroll="{TemplateBinding CanContentScroll}"/>

                        <!-- Вертикальный скроллбар -->
                        <ScrollBar x:Name="VerticalScrollBar" 
                         Grid.Column="1" Grid.Row="0"
                         Style="{StaticResource NeonScrollBar}"
                         Value="{TemplateBinding VerticalOffset}"
                         Maximum="{TemplateBinding ScrollableHeight}"
                         ViewportSize="{TemplateBinding ViewportHeight}"
                         Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>

                        <!-- Горизонтальный скроллбар -->
                        <ScrollBar x:Name="HorizontalScrollBar" 
                         Grid.Column="0" Grid.Row="1"
                         Style="{StaticResource NeonScrollBarHorizontal}"
                         Orientation="Horizontal"
                         Value="{TemplateBinding HorizontalOffset}"
                         Maximum="{TemplateBinding ScrollableWidth}"
                         ViewportSize="{TemplateBinding ViewportWidth}"
                         Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>

                        <!-- Уголок между скроллбарами - теперь с темным фоном -->
                        <Border Grid.Column="1" Grid.Row="1"
                         Background="{StaticResource BgDarkerBrush}"
                         Width="{Binding ActualHeight, ElementName=VerticalScrollBar}"
                         Height="{Binding ActualHeight, ElementName=HorizontalScrollBar}"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Если вертикальный скроллбар не виден, скрываем уголок -->
                        <Trigger Property="ComputedVerticalScrollBarVisibility" Value="Hidden">
                            <Setter TargetName="VerticalScrollBar" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Если горизонтальный скроллбар не виден, скрываем уголок -->
                        <Trigger Property="ComputedHorizontalScrollBarVisibility" Value="Hidden">
                            <Setter TargetName="HorizontalScrollBar" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Стили для PeakMeter -->

    <!-- Основной стиль пикметра -->
    <Style x:Key="RetroPeakMeterStyle" TargetType="controls:PeakMeter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#FF00FFFF" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль границы пикметра -->
    <Style x:Key="PeakMeterBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#1100FFFF"/>
        <Setter Property="BorderBrush" Value="#3300FFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- Стиль границы канала -->
    <Style x:Key="ChannelBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#0A00FFFF"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- Стиль разделителя каналов -->
    <Style x:Key="ChannelDividerStyle" TargetType="Rectangle">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Fill" Value="#6600FFFF"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="4,0,4,0"/>
    </Style>

    <!-- Стиль текста пиковых значений -->
    <Style x:Key="PeakValueTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource RetroTextBrush}"/>
        <Setter Property="FontFamily" Value="Courier New"/>
        <Setter Property="FontSize" Value="8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

    <!-- Стиль для бара пикметра (используется в коде) -->
    <Style x:Key="RetroBarStyle" TargetType="Rectangle">
        <Setter Property="RadiusX" Value="1"/>
        <Setter Property="RadiusY" Value="1"/>
        <Setter Property="Opacity" Value="0.15"/>
    </Style>
</ResourceDictionary>