<UserControl x:Class="FrostLive.Controls.PeakMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200"
             Name="PeakMeterRoot">

    <UserControl.Resources>
        <!-- Локальные ресурсы для удобства -->
        <SolidColorBrush x:Key="MeterBackground" Color="#1100FFFF"/>
        <SolidColorBrush x:Key="MeterBorder" Color="#3300FFFF"/>
        <SolidColorBrush x:Key="ChannelBackground" Color="#0A00FFFF"/>
        <SolidColorBrush x:Key="DividerColor" Color="#6600FFFF"/>
    </UserControl.Resources>

    <Grid>
        <!-- Фоновый контейнер с применением стиля -->
        <Border Style="{StaticResource PeakMeterBorderStyle}">
            <!-- Вертикальная компоновка каналов -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Левая шкала (верхняя) -->
                <Grid Grid.Row="0" Margin="2,2,2,1">
                    <Border Style="{StaticResource ChannelBorderStyle}">
                        <Canvas x:Name="LeftMeterCanvas" />
                    </Border>
                    <TextBlock x:Name="LeftPeakText"
                              Text="0.00"
                              Style="{StaticResource PeakValueTextStyle}"
                              HorizontalAlignment="Right"
                              Margin="0,0,4,0"/>
                </Grid>

                <!-- Правая шкала (нижняя) -->
                <Grid Grid.Row="1" Margin="2,1,2,2">
                    <Border Style="{StaticResource ChannelBorderStyle}">
                        <Canvas x:Name="RightMeterCanvas" />
                    </Border>
                    <TextBlock x:Name="RightPeakText"
                              Text="0.00"
                              Style="{StaticResource PeakValueTextStyle}"
                              HorizontalAlignment="Right"
                              Margin="0,0,4,0"/>
                </Grid>

                <!-- Разделительная линия -->
                <Rectangle Grid.RowSpan="2" 
                          Style="{StaticResource ChannelDividerStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>