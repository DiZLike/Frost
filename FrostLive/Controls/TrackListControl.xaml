<UserControl x:Class="FrostLive.Controls.TrackListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400"
             Background="Transparent">

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                   BorderBrush="{StaticResource NeonBlueBrush}" 
                   BorderThickness="0,0,0,1"
                   Margin="0,0,0,10"
                   Padding="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Foreground="{StaticResource NeonBlueBrush}"
                              FontFamily="Courier New"
                              FontSize="16"
                              FontWeight="Bold"
                              TextTrimming="CharacterEllipsis"/>
                </Grid>
            </Border>

            <!-- Tracks List с кастомным скроллбаром -->
            <ListBox Grid.Row="1" 
                    ItemsSource="{Binding Tracks, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Background="Transparent"
                    BorderThickness="0"
                    MaxHeight="{Binding MaxListHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    ItemContainerStyle="{StaticResource TrackItemStyle}">

                <!-- Используем существующий стиль скроллбара из NeonStyles.xaml -->
                <ListBox.Template>
                    <ControlTemplate TargetType="ListBox">
                        <ScrollViewer x:Name="ScrollViewer"
                            Focusable="False"
                            Background="Transparent"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled"
                            Padding="0,0,1,1">

                            <!-- Ключевое: устанавливаем CornerFillColor -->
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource NeonScrollBar}"/>

                                <!-- Этот цвет зальет угол -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" />
                            </ScrollViewer.Resources>

                            <ItemsPresenter/>
                        </ScrollViewer>
                    </ControlTemplate>
                </ListBox.Template>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" MinWidth="60"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Контейнер для текстовой информации -->
                            <Grid Grid.Column="0" Grid.RowSpan="3" Margin="0,2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Время воспроизведения -->
                                <TextBlock Grid.Row="0"
                Text="{Binding FormattedTime}" 
                Foreground="{StaticResource NeonBlueBrush}"
                FontFamily="Courier New"
                FontSize="11"
                Opacity="0.8"
                TextTrimming="CharacterEllipsis"
                Margin="0,0,0,2"/>

                                <!-- Название трека -->
                                <TextBlock Grid.Row="1"
                Text="{Binding DisplayTitle}" 
                Foreground="{StaticResource NeonBlueBrush}"
                FontFamily="Courier New"
                FontSize="13"
                FontWeight="Bold"
                TextTrimming="CharacterEllipsis"
                Margin="0,0,0,2"/>

                                <!-- Исполнитель -->
                                <TextBlock Grid.Row="2"
                Text="{Binding Artist}" 
                Foreground="{StaticResource NeonBlueBrush}"
                FontFamily="Courier New"
                FontSize="12"
                Opacity="0.9"
                TextTrimming="CharacterEllipsis"/>
                            </Grid>

                            <!-- Кнопка скачать - занимает первые две строки -->
                            <Button Grid.Column="1" 
                Grid.Row="0"
                Grid.RowSpan="2"
                Command="{Binding DownloadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CommandParameter="{Binding DownloadLink}"
                Style="{StaticResource NeonButtonStyle}"
                BorderBrush="{StaticResource NeonGreenBrush}"
                Foreground="{StaticResource NeonGreenBrush}"
                BorderThickness="1"
                Padding="0"
                Margin="10,0,0,0"
                ToolTip="Скачать"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
MaxHeight="35"
                MaxWidth="40"
                MinWidth="25">
                                <TextBlock Text="↓" FontSize="14"/>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</UserControl>