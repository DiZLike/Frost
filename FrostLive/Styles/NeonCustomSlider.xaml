<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NeonCustomSlider" TargetType="Slider">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Иконка -->
                        <TextBlock Grid.Column="0" 
                          Text="🔊" 
                          Foreground="{StaticResource NeonBlueBrush}" 
                          FontSize="14"
                          Margin="0,0,8,0"
                          VerticalAlignment="Center"/>

                        <!-- Контейнер ползунка -->
                        <Border Grid.Column="1" 
                       Background="#2200FFFF"
                       BorderBrush="#4400FFFF"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="2"
                       VerticalAlignment="Center">
                            <Grid>
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="Slider.DecreaseLarge" 
                                             Background="Transparent">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="Transparent"
                                                    CornerRadius="2"
                                                    x:Name="Border">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">

                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">

                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="Slider.IncreaseLarge" 
                                             Background="Transparent">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="Transparent"
                                                    CornerRadius="2"
                                                    x:Name="Border">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">

                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">

                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb x:Name="CustomThumb" 
                                      Width="14" 
                                      Height="14" 
                                      Background="Transparent">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="{StaticResource NeonBlueBrush}" 
                                                    Stroke="#FF0a0a0f" 
                                                    StrokeThickness="2">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect BlurRadius="5" 
                                                                    ShadowDepth="0" 
                                                                    Color="#FF00FFFF"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Track" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10" 
                                            ShadowDepth="0" 
                                            Color="#FF00FFFF" 
                                            Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="CustomThumb" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10" 
                                             ShadowDepth="0" 
                                             Color="#FF00FFFF" 
                                             Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>